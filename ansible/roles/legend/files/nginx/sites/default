server {
    listen 80 default_server;
    server_name localhost;
    index index.php;
    root /vagrant/admin;

    include snippets/php.conf;
}

server {
    listen 443 default_server;
    server_name localhost;
    index index.php;
    root /vagrant/admin;

    include snippets/localhost-ssl.conf;
    include snippets/php.conf;
}

server {
    server_name php.localhost;
    root /home/vagrant/www/localhost/php;
    index index.php;

    include snippets/php.conf;
}

server {
    listen 443;
    server_name php.localhost;
    root /home/vagrant/www/localhost/php;
    index index.php;

    include snippets/wildcard-localhost-ssl.conf;
    include snippets/php.conf;
}

server {
    server_name mysql.localhost;
    index index.php;
    root /home/vagrant/www/localhost/mysql;

    include snippets/php.conf;
}

server {
    listen 443;
    server_name mysql.localhost;
    index index.php;
    root /home/vagrant/www/localhost/mysql;

    include snippets/wildcard-localhost-ssl.conf;
    include snippets/php.conf;
