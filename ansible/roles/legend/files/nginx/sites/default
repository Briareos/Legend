server {
    server_name redis.localhost;

    location / {
        proxy_pass http://127.0.0.1:8081;
        include snippets/http-proxy.conf;
    }
}

server {
    listen 443;
    server_name redis.localhost;

    include snippets/wildcard-localhost-ssl.conf;

    location / {
        proxy_pass http://127.0.0.1:8081;
        include snippets/http-proxy.conf;
    }
}

server {
    server_name rabbitmq.localhost;

    location / {
        proxy_pass http://127.0.0.1:15672;
        include snippets/http-proxy.conf;
    }
}

server {
    listen 443;
    server_name rabbitmq.localhost;

    include snippets/wildcard-localhost-ssl.conf;

    location / {
        proxy_pass http://127.0.0.1:15672;
        include snippets/http-proxy.conf;
    }
}

server {
    server_name mail.localhost;

    location / {
        proxy_pass http://127.0.0.1:1080;
        include snippets/http-proxy.conf;
    }
}

server {
    listen 443;
    server_name mail.localhost;

    include snippets/wildcard-localhost-ssl.conf;

    location / {
        proxy_pass http://127.0.0.1:1080;
        include snippets/http-proxy.conf;
    }
